{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2019",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "public", ".cache"],
  "files": [
    "src/types/types.d.ts",
    "src/types/yaml.d.ts"
  ]
}
